<% include header %>
<style>
    #baidumap img {
        max-width: none;
    }
</style>
<div class="bs-wcy_htbox container">
    <a href="#">首页</a> > <a href="/products/<%=product.city._id%>"><%=product.city.name%></a> > <%=product.name%>
</div>
<div class="bs-wcy_htBanbgcolor">
    <div class="bs-wcy_htBanbg">
        <!--大广告图切换位置-->
        <div class="bs-wcy_htBanbox">
            <!--大图列表-->
            <div id="slider" class="nivoSlider">
                <!--<img src="/images/wcy_hotelbanner01.jpg" data-thumb="/images/wcy_hotelbanner01_90x60.jpg" alt="西湖" />-->
                <!--<img src="/images/wcy_hotelbanner02.jpg" data-thumb="/images/wcy_hotelbanner02_90x60.jpg"  alt="西湖" />-->
                <!--<img src="/images/wcy_hotelbanner03.jpg" data-thumb="/images/wcy_hotelbanner03_90x60.jpg" alt="西湖" />-->

                <%for(var i=0;i<(product.image.length>3?3:product.image.length);i++){%>
                <img src="http://dd885.b0.upaiyun.com/<%=product.image[i].url%>!productDetailHead" data-thumb="http://dd885.b0.upaiyun.com/<%=product.image[i].url%>!productDetailBanner" alt="<%=product.image[i].intro%>"/>
                <%}%>

            </div>
            <!--浮层日期信息-->
            <div class="bs-wcy_htBanInfo">
                <div class="hotelname">
                    <h1><%=product.name%></h1>
                </div>
                <form class="formtab" name="form_order" id="form_order" action="/package/fill" method="GET">
                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                        <tr>
                            <td width="30%" height="50" align="left" valign="middle"><label>入住日期</label></td>
                            <td align="left" valign="middle">
                                <input class="inputcalendar" size="16" type="text" value="" id="packageDate">
                            </td>
                        </tr>
